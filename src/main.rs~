use std::fmt::format;
use actix_web::{App, HttpServer, Responder};

#[actix_web::get("/greet")]
async fn greet() -> impl Responder {
    format!("Hello World!")
}


#[actix_web::main]
async fn main() -> std::io::Result<()> {
    let port = 8080;
    println!("starting server on port {port}", );

    HttpServer::new(|| App::new())
        .bind(("127.0.0.1", port))?
        .workers(2)
        .run()
        .await


}
